    <script>
        window.onload = function() {
            fetch('/update_remember').then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.text();
            }).then(data => {
                console.log('Remember period extended');
            }).catch(error => {
                console.error('Error extending remember period:', error);
            });

            const searchInput = document.getElementById('search-input');
            const searchBtn = document.getElementById('search-btn');
            const ratingFilter = document.getElementById('rating-filter');
            const restaurantList = document.getElementById('restaurant-list');
            const restaurants = restaurantList.getElementsByClassName('review-link');

            searchBtn.addEventListener('click', function() {
                const searchTerm = searchInput.value.toLowerCase();
                const rating = ratingFilter.value;
                for (const restaurant of restaurants) {
                    const title = restaurant.querySelector('h2').textContent.toLowerCase();
                    const restaurantRating = restaurant.getAttribute('data-rating');
                    if (title.includes(searchTerm) && (rating === 'all' || restaurantRating === rating)) {
                        restaurant.style.display = '';
                    } else {
                        restaurant.style.display = 'none';
                    }
                }
            });

            ratingFilter.addEventListener('change', function() {
                const rating = ratingFilter.value;
                const searchTerm = searchInput.value.toLowerCase();
                for (const restaurant of restaurants) {
                    const title = restaurant.querySelector('h2').textContent.toLowerCase();
                    const restaurantRating = restaurant.getAttribute('data-rating');
                    if (title.includes(searchTerm) && (rating === 'all' || restaurantRating === rating)) {
                        restaurant.style.display = '';
                    } else {
                        restaurant.style.display = 'none';
                    }
                }
            });

            const editButtons = document.getElementsByClassName('edit-btn');
            const deleteButtons = document.getElementsByClassName('delete-btn');

            for (const button of editButtons) {
                button.addEventListener('click', function() {
                    const review = this.parentElement;
                    const reviewText = review.querySelector('.review-text');
                    const newText = prompt('Edit your review:', reviewText.textContent);
                    if (newText !== null) {
                        reviewText.textContent = newText;
                        review.querySelector('.edited-label').style.display = 'inline';
                    }
                });
            }

            for (const button of deleteButtons) {
                button.addEventListener('click', function() {
                    if (confirm('Are you sure you want to delete this review?')) {
                        const review = this.parentElement;
                        review.remove();
                    }
                });
            }
        }
    </script>

